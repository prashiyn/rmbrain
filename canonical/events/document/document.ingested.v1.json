{
  "$id": "https://schemas.rmbrain.ai/events/document.ingested.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Document Ingested Event Payload",
  "type": "object",
  "required": [
    "document_id",
    "relationship_id"
  ],
  "properties": {
    "document_id": { "type": "string" },
    "relationship_id": { "type": "string" },
    "client_id": {
      "type": "string",
      "description": "Client associated with the document (may be primary_client_id or in scope_client_ids)"
    },
    "document_type": { "type": "string" },
    "ingested_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}

