{
  "$id": "https://schemas.rmbrain.ai/events/document.linked.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Document Linked Event Payload",
  "type": "object",
  "required": ["document_id", "links"],
  "properties": {
    "document_id": { "type": "string" },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["entity_type", "entity_id"],
        "properties": {
          "entity_type": {
            "type": "string",
            "enum": [
              "client",
              "product",
              "portfolio",
              "proposal",
              "interaction",
              "relationship"
            ]
          },
          "entity_id": { "type": "string" }
        }
      }
    }
  }
}

