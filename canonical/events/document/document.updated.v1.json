{
  "$id": "https://schemas.rmbrain.ai/events/document.updated.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Document Updated Event Payload",
  "type": "object",
  "required": ["document_id"],
  "properties": {
    "document_id": { "type": "string" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "category": { "type": "string" },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "under_review",
        "active",
        "superseded",
        "archived",
        "suspended",
        "removed"
      ]
    },
    "version": { "type": "string" },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "reason": { "type": "string", "description": "Reason for update" }
  }
}

