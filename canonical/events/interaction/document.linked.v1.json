{
  "$id": "https://schemas.rmbrain.ai/document.linked.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Document Linked Event Payload",
  "type": "object",
  "description": "Payload for document.linked event",
  "required": ["interaction_id", "document_id"],
  "properties": {
    "interaction_id": {
      "type": "string",
      "description": "ID of the interaction to link the document to"
    },
    "document_id": {
      "type": "string",
      "description": "ID of the document being linked"
    }
  }
}

