{
  "$id": "https://schemas.rmbrain.ai/product.artefact.linked.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Product Artefact Linked Event Payload",
  "type": "object",
  "description": "Payload for product.artefact.linked event",
  "required": ["product_id", "artefact"],
  "properties": {
    "product_id": {
      "type": "string",
      "description": "ID of the product"
    },
    "artefact": {
      "type": "object",
      "required": ["artefact_id", "type"],
      "properties": {
        "artefact_id": {
          "type": "string",
          "description": "Document ID from Document Service"
        },
        "type": {
          "type": "string",
          "enum": [
            "factsheet",
            "brochure",
            "sid",
            "fund_manager_note",
            "risk_disclosure",
            "presentation",
            "video",
            "other"
          ]
        },
        "version": {
          "type": "string",
          "description": "Human-readable version (e.g. v2024-Q3)"
        },
        "effective_from": {
          "type": "string",
          "format": "date"
        },
        "effective_to": {
          "type": "string",
          "format": "date"
        },
        "mandatory_for_advice": {
          "type": "boolean",
          "default": false
        }
      }
    }
  }
}

