{
  "$id": "https://schemas.rmbrain.ai/events/task.completed.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Task Completed Event Payload",
  "type": "object",
  "description": "Payload for task.completed event emitted by cds_task",
  "required": [
    "task_id",
    "task_type"
  ],
  "properties": {
    "task_id": {
      "type": "string",
      "description": "Unique task identifier"
    },
    "task_type": {
      "type": "string",
      "description": "Type of task"
    },
    "completed_by": {
      "type": "object",
      "description": "Actor who completed the task",
      "properties": {
        "actor_id": {
          "type": "string"
        },
        "actor_role": {
          "type": "string"
        },
        "actor_type": {
          "type": "string",
          "enum": [
            "human_internal",
            "human_external",
            "system",
            "service"
          ]
        }
      }
    },
    "completed_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the task was completed"
    },
    "completion_notes": {
      "type": "string",
      "description": "Optional completion notes"
    }
  }
}

