{
  "$id": "https://schemas.rmbrain.ai/events/interaction/interaction.finalized.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "InteractionFinalized",
  "type": "object",
  "required": [
    "interaction_id",
    "tenant_id",
    "interaction_type",
    "status",
    "participants",
    "timestamp",
    "provenance",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "interaction_id": { "type": "string" },
    "tenant_id": { "type": "string" },

    "interaction_type": {
      "type": "string",
      "enum": [
        "meeting",
        "call",
        "email",
        "chat",
        "note",
        "audio",
        "video",
        "system"
      ]
    },

    "status": {
      "type": "string",
      "enum": [
        "initiated",
        "in_progress",
        "completed",
        "documents_attached",
        "under_review",
        "finalized",
        "superseded",
        "archived",
        "cancelled"
      ]
    },

    "participants": {
      "type": "array",
      "minItems": 1,
      "description": "Actors involved in the interaction",
      "items": {
        "type": "object",
        "required": ["actor_id", "actor_role", "actor_type"],
        "properties": {
          "actor_id": {
            "type": "string",
            "description": "User or system identifier"
          },
          "actor_role": {
            "type": "string",
            "description": "Role from canonical actor taxonomy"
          },
          "actor_type": {
            "type": "string",
            "description": "Type of the actor",
            "enum": [
              "human_internal",
              "human_external",
              "system",
              "service"
            ]
          },
          "display_name": { "type": "string" }
        },
        "additionalProperties": false
      }
    },

    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Start time of interaction"
    },

    "duration_seconds": {
      "type": "integer",
      "minimum": 0
    },

    "summary": {
      "type": "string",
      "description": "Optional human-entered summary"
    },

    "documents": {
      "type": "array",
      "description": "Linked document IDs",
      "items": { "type": "string" }
    },

    "signals": {
      "type": "object",
      "description": "Non-AI signals only",
      "additionalProperties": true
    },

    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },

    "provenance": {
      "type": "object",
      "required": ["source"],
      "properties": {
        "source": { "type": "string" },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      }
    },

    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" }
  }
}
