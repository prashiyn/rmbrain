{
  "$id": "https://schemas.rmbrain.ai/events/riskprofile/riskprofile.superseded.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RiskProfileSuperseded",
  "type": "object",
  "required": [
    "riskprofile_id",
    "tenant_id",
    "client_id",
    "status",
    "risk_dimensions",
    "score",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "riskprofile_id": { "type": "string" },
    "tenant_id": { "type": "string" },
    "client_id": { "type": "string" },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "under_review",
        "active",
        "superseded",
        "expired",
        "archived"
      ]
    },
    "risk_dimensions": {
      "type": "object",
      "required": [
        "risk_tolerance",
        "risk_capacity",
        "investment_objectives",
        "time_horizon"
      ],
      "properties": {
        "risk_tolerance": { "type": "string" },
        "risk_capacity": { "type": "string" },
        "investment_objectives": {
          "type": "array",
          "items": { "type": "string" }
        },
        "time_horizon": { "type": "string" },
        "liquidity_needs": { "type": "string" },
        "knowledge_experience": { "type": "string" },
        "constraints": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "score": {
      "type": "object",
      "required": ["numeric_score", "risk_band"],
      "properties": {
        "numeric_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "risk_band": {
          "type": "string",
          "enum": ["conservative", "moderate", "balanced", "aggressive"]
        }
      }
    },
    "derived_from": {
      "type": "array",
      "description": "Supporting interactions/documents",
      "items": {
        "type": "object",
        "required": ["entity_type", "entity_id"],
        "properties": {
          "entity_type": {
            "type": "string",
            "enum": ["interaction", "document"]
          },
          "entity_id": { "type": "string" }
        }
      }
    },
    "valid_from": { "type": "string", "format": "date-time" },
    "valid_to": { "type": "string", "format": "date-time" },
    "superseded_by": {
      "type": "string",
      "description": "ID of the risk profile that superseded this one"
    },
    "created_at": { "type": "string", "format": "date-time" },
    "updated_at": { "type": "string", "format": "date-time" }
  }
}
