{
  "$id": "https://schemas.rmbrain.ai/events/task/task.status_changed.v1.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TaskStatusChanged",
  "type": "object",
  "required": [
    "task_id",
    "previous_status",
    "new_status"
  ],
  "properties": {
    "task_id": {
      "type": "string",
      "description": "Unique task identifier"
    },
    "previous_status": {
      "type": "string",
      "enum": [
        "open",
        "in_progress",
        "blocked",
        "completed",
        "cancelled",
        "expired",
        "superseded",
        "archived"
      ],
      "description": "Previous task status"
    },
    "new_status": {
      "type": "string",
      "enum": [
        "open",
        "in_progress",
        "blocked",
        "completed",
        "cancelled",
        "expired",
        "superseded",
        "archived"
      ],
      "description": "New task status"
    },
    "task_type": {
      "type": "string",
      "description": "Type of task"
    },
    "changed_by": {
      "type": "object",
      "description": "Actor who changed the status",
      "properties": {
        "actor_id": { "type": "string" },
        "actor_role": { "type": "string" },
        "actor_type": {
          "type": "string",
          "enum": [
            "human_internal",
            "human_external",
            "system",
            "service"
          ]
        }
      }
    }
  }
}
